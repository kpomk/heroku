  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 col-md-offset-2 col-md-8 col-xs-12 col-sm-offset-2 col-sm-8">
           <%= form_for(task) do |f| %>
                  <% if task.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>

                      <ul>
                        <% task.errors.full_messages.each do |task| %>
                          <li><%= task %></li>
                        <% end %>
                      </ul>
                    </div>
           <% end %>
        
        <div class="form-group">
          <%= f.label :status, '状況' %>
          <%= f.text_field :status, class: 'form-control' %>
        </div>
        
        
        <div class="form-group">
           <%= f.label :content, '内容' %>
           <%= f.text_field :content, class: 'form-control' %>
        </div>
        
        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
